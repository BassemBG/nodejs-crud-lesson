{% extends 'layout.twig' %}

{% block body %}
	<h1>{{title}}</h1>
	<p>Welcome to {{title}}</p>
	<div>
		<h2>Add contact</h2>
		<form action="/contacts/create" method="POST">
			<label for="FullName">FullName</label>
			<input type="text" id="fullName" name="fullName" placeholder="Add a FullName"/>
			<label for="Phone">FullName</label>
			<input type="number" id="phone" name="phone" placeholder="Add a Phone"/>
			<input type="submit" value="Save"/>
		</form>
		<h2>Contact list</h2>
		<hr>
		{% for contact in contacts %}
			<p>
				<b>FullName :
				</b>
				{{ contact.fullName }}</p>
			<p>
				<b>Phone :
				</b>
				{{ contact.phone }}</p>

			<form action="/contacts/delete/{{ contact.id }}" method="POST" style="display: inline;">
				<button type="submit" onclick="return confirm('Are you sure you want to delete this ?')">Delete</button>
			</form>
			<a href="/contacts/update/{{ contact.id }}" class="update-button">
				<button type="button">Update</button>
			</a>
			<hr>
		{% endfor %}
	</div>
{% endblock %}
