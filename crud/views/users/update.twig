{% extends 'layout.twig' %}

{% block body %}
  <h1>{{title}}</h1>
  <p>Update User details</p>
  <div>
    <h2>Update User</h2>
    <form action="/users/update" method="POST">
        <input type="hidden" name="id" value="{{ user.id }}">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" value="{{ user.username }}" required minlength="2" maxlength="5">
        <br>
        <label for="password">Password:</label>
        <input type="number" id="password" name="password" value="{{ user.password }}" required>
        <br>
        <label for="birthday">Birthday:</label>
        <input type="date" id="birthday" name="birthday" value="{{ user.birthday | date("Y-m-d") }}" required>
        <br>
        <button type="submit">Update</button>
    </form>

    <a href="/users">Back to Users List</a>
  </div>
{% endblock %}
