{% extends "layout.twig" %}

{% block body %}

	<div>
		<h2>Add User</h2>
		<form action="/users/create" method="POST">
			<label for="username">Username</label>
			<input type="text" id="username" name="username" placeholder="Add a Username"/>
			<label for="password">Password</label>
			<input type="number" id="password" name="password" placeholder="Add a password"/>
			<label for="birthday">Birthday</label>
			<input type="number" id="birthday" name="birthday" placeholder="Add a Birthday"/>
			<input type="submit" value="Save"/>
		</form>
    </div>
    
  <h1>{{title}}</h1>

  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Password</th>
        <th>Birthday</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
        <tr>
          <td>{{ user.id }}</td>
          <td>{{ user.username }}</td>
          <td>{{ user.password }}</td>
          <td>{{ user.birthday | date("Y-m-d") }}</td>
          <td>
            <a href="/users/update/{{ user.id }}">
            	<button type="button">Update</button>
            </a>
            <form action="/users/delete/{{ user.id }}" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this ?')" >Delete</button>
            </form>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
